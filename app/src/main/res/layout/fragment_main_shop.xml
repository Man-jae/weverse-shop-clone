<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_artist_shop_title"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/background_main"
        android:elevation="1dp"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/text_artist_shop_title"
            style="@style/text_artist_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view_artist_shop_title_arrow"
            />

        <View
            android:id="@+id/view_artist_shop_title_arrow"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/text_artist_shop_title"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@id/text_artist_shop_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_artist_shop_title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_top"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background_main"
                    android:elevation="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_artist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                        <TextView
                            android:id="@+id/text_artist_name"
                            style="@style/text_artist_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/layout_artist_shop"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_artist_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/background_shop_type"
                            app:layout_constraintBottom_toBottomOf="@id/text_artist_name"
                            app:layout_constraintLeft_toRightOf="@id/text_artist_name"
                            app:layout_constraintRight_toLeftOf="@id/view_drop_down"
                            app:layout_constraintTop_toTopOf="@id/text_artist_name"
                            >

                            <TextView
                                android:id="@+id/text_artist_shop"
                                style="@style/text_shop_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:id="@+id/view_drop_down"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_drop_down"
                            app:layout_constraintBottom_toBottomOf="@id/text_artist_name"
                            app:layout_constraintDimensionRatio="1"
                            app:layout_constraintLeft_toRightOf="@id/layout_artist_shop"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/text_artist_name"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.example.weverse_shop_clone.util.MeasuredViewPager
                        android:id="@+id/viewpager_banner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_artist"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_goods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_main"
                    android:elevation="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_top"
                    >

                    <TextView
                        android:id="@+id/text_goods_title"
                        style="@style/text_shop_title"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:background="@color/background_main"
                        android:elevation="1dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/shop_goods_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/layout_tab_shop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/background_main"
                        android:elevation="1dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_goods_title"
                        app:tabIndicatorFullWidth="false"
                        app:tabMode="scrollable"
                        app:tabSelectedTextColor="@color/tab_main"
                        />

                    <com.example.weverse_shop_clone.util.MeasuredViewPager
                        android:id="@+id/viewpager_goods"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_tab_shop"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_goods_recent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_main"
                    android:elevation="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_goods"
                    >

                    <TextView
                        android:id="@+id/text_goods_recent_title"
                        style="@style/text_shop_title"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/shop_recent_goods_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_goods_recent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_goods_recent_title"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_notice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_main"
                    android:elevation="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_goods_recent"
                    >

                    <TextView
                        android:id="@+id/text_notice_title"
                        style="@style/text_shop_title"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/shop_notice_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_notice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_notice_title"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/text_company_name"
                    style="@style/text_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_notice"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_company_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/text_company_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_company_name"
                    >

                    <TextView
                        style="@style/text_company_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/company_info"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/view_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <CheckBox
                        android:id="@+id/view_arrow"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:background="@drawable/check_company_info"
                        android:button="@null"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_company_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_company_info"
                    >

                    <TextView
                        android:id="@+id/text_company_info"
                        style="@style/text_company_info_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/text_privacy_policy"
                    style="@style/text_company_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/company_privacy_policy"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/text_terms_of_use"
                    app:layout_constraintTop_toBottomOf="@id/layout_company_info"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="0dp"
                    android:background="@color/gray_666666"
                    app:layout_constraintBottom_toBottomOf="@id/text_privacy_policy"
                    app:layout_constraintLeft_toRightOf="@id/text_privacy_policy"
                    app:layout_constraintRight_toLeftOf="@id/text_terms_of_use"
                    app:layout_constraintTop_toTopOf="@id/text_privacy_policy"
                    />

                <TextView
                    android:id="@+id/text_terms_of_use"
                    style="@style/text_company_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/company_terms_of_use"
                    app:layout_constraintLeft_toRightOf="@id/text_privacy_policy"
                    app:layout_constraintTop_toBottomOf="@id/layout_company_info"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/gray_666666"
                    app:layout_constraintBottom_toBottomOf="@id/text_terms_of_use"
                    app:layout_constraintLeft_toRightOf="@id/text_terms_of_use"
                    app:layout_constraintTop_toTopOf="@id/text_terms_of_use"
                    />

                <TextView
                    android:id="@+id/text_paid_service_terms"
                    style="@style/text_company_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company_paid_service_terms"
                    app:layout_constraintLeft_toLeftOf="@id/text_privacy_policy"
                    app:layout_constraintTop_toBottomOf="@id/text_privacy_policy"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_back_to_top"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/button_back_to_top"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_paid_service_terms"
                    >

                    <View
                        android:layout_width="25dp"
                        android:layout_height="0dp"
                        android:background="@drawable/ic_back_to_top"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>