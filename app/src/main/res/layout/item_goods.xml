<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/view_banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/gray_999999"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/text_sole_sale"
            style="@style/text_goods_sole_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/view_banner"
            app:layout_constraintRight_toRightOf="@id/view_banner"
            app:layout_constraintTop_toBottomOf="@id/view_banner"
            />

        <TextView
            android:id="@+id/text_pre_order"
            style="@style/text_goods_pre_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/view_banner"
            app:layout_constraintRight_toRightOf="@id/view_banner"
            app:layout_constraintTop_toBottomOf="@id/text_sole_sale"
            />

        <TextView
            android:id="@+id/text_goods_title"
            style="@style/text_goods_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/view_banner"
            app:layout_constraintRight_toRightOf="@id/view_banner"
            app:layout_constraintTop_toBottomOf="@id/text_pre_order"
            />

        <TextView
            android:id="@+id/text_goods_price"
            style="@style/text_goods_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/view_banner"
            app:layout_constraintRight_toRightOf="@id/view_banner"
            app:layout_constraintTop_toBottomOf="@id/text_goods_title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>