<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/gray_cccccc</item>
    </style>

    <style name="bottom_navigation_active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="bottom_navigation_inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="text_artist_name">
        <item name="android:textColor">@color/shop_artist_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:text">ARTIST_NAME</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_shop_type">
        <item name="android:textColor">@color/shop_type_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8dp</item>
        <item name="android:text">TYPE</item>
    </style>

    <style name="text_shop_title">
        <item name="android:textColor">@color/shop_title</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="button_shop_goods_more">
        <item name="android:background">@drawable/button_goods_more</item>
        <item name="android:textColor">@color/button_main</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">@string/shop_goods_more_button</item>
    </style>

</resources>