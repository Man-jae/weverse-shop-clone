<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/gray_cccccc</item>
    </style>

    <style name="bottom_navigation_active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="bottom_navigation_inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10dp</item>
    </style>

</resources>